<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- list view -->
    <record id="student_student_view_list" model="ir.ui.view">
        <field name="name">student.student.list</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="student_id"/>
                <field name="dob"/>
                <field name="gender" widget="badge"
                       decoration-success="gender == 'male'"
                       decoration-warning="gender == 'female'"
                       decoration-danger="gender == 'other'"/>
            </list>
        </field>
    </record>

    <!-- form view -->
    <record id="student_student_view_form" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button type="object" name="print_something" string="Click" class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="student_id"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="admission_date"/>
                    </group>
                    <notebook>
                        <page string="Contact">
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="address"/>
                            </group>
                        </page>
                        <page string="Guardian Info">
                            <group>
                                <field name="guardian_name"/>
                                <field name="guardian_phone"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- search view -->
    <record id="student_student_view_search" model="ir.ui.view">
        <field name="name">student.student.search</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="name"/>
                <field name="student_id"/>
                <filter name="filter_by_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_by_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <filter name="filter_by_other" string="Other" domain="[('gender', '=', 'other')]"/>
                <separator/>
                <filter name="group_by_gender" string="Group by Gender" context="{'group_by': 'gender'}"/>
            </search>
        </field>
    </record>

    <!-- kanban view -->
    <record id="student_student_view_kanban" model="ir.ui.view">
        <field name="name">student.student.kanban</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('student.student', 'image', record.id.raw_value)" alt="Student Image"/>
                            </div>
                            <div class="px-2">
                                <strong><field name="name"/></strong><br/>
                                <field name="student_id"/><br/>
                                <field name="dob"/>
                            </div>
                            <t t-if="record.gender.raw_value == 'male'">
                                <p class="badge rounded-pill bg-success text-white">Male</p>
                            </t>
                            <t t-if="record.gender.raw_value == 'female'">
                                <p class="badge rounded-pill bg-warning text-white">Female</p>
                            </t>
                            <t t-if="record.gender.raw_value == 'other'">
                                <p class="badge rounded-pill bg-danger text-white">Other</p>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- action -->
    <record id="student_student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>
