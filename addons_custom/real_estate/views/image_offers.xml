<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View khách hàng - List view -->
    <record id="view_image_offers_list" model="ir.ui.view">
        <field name="name">view.image_offers.list</field>
        <field name="model">image_offers</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View khách hàng - Form view -->
    <record id="view_image_offers_form" model="ir.ui.view">
        <field name="name">view.image_offers.form</field>
        <field name="model">image_offers</field>
        <field name="arch" type="xml">
            <form string="image_offers">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="image_offers"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_image_offers_search" model="ir.ui.view">
        <field name="name">view.image_offers.search</field>
        <field name="model">image_offers</field>
        <field name="arch" type="xml">
            <search string="image_offers">
                <field name="name"/>
                
            </search>
        </field>

</odoo>
