<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="buyers_action" model="ir.actions.act_window">
        <field name="name">Buyers</field>
        <field name="res_model">buyers</field>
        <field name="view_mode">list,form</field>
    </record>
        <menuitem id="buyers_root" name="Real Estate">
        <menuitem id="buyers_menu" name="Menu" action="buyers_action">
        
        </menuitem>
    </menuitem>


    <!-- View khách hàng - List view -->
    <record id="view_buyers_list" model="ir.ui.view">
        <field name="name">view.buyers.list</field>
        <field name="model">buyers</field>
        <field name="arch" type="xml">
            <list string="Buyers">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- View khách hàng - Form view -->
    <record id="view_buyers_form" model="ir.ui.view">
        <field name="name">view.buyers.form</field>
        <field name="model">buyers</field>
        <field name="arch" type="xml">
            <form string="Buyers">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
