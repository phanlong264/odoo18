<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_ecommerce_integration_tree" model="ir.ui.view">
        <field name="name">ecommerce.integration.tree</field>
        <field name="model">ecommerce.integration</field>
        <field name="arch" type="xml">
            <list string="E-commerce Integration">
                <field name="name"/>
                <field name="platform"/>
                <field name="store_url"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ecommerce_integration_form" model="ir.ui.view">
        <field name="name">ecommerce.integration.form</field>
        <field name="model">ecommerce.integration</field>
        <field name="arch" type="xml">
            <form string="E-commerce Integration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="platform"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="store_url"/>
                        </group>
                    </group>
                    <group string="Authentication">
                        <group>
                            <field name="api_key" password="True"/>
                        </group>
                        <group>
                            <field name="api_secret" password="True"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Add notes here..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ecommerce_integration_search" model="ir.ui.view">
        <field name="name">ecommerce.integration.search</field>
        <field name="model">ecommerce.integration</field>
        <field name="arch" type="xml">
            <search string="E-commerce Integration">
                <field name="name"/>
                <field name="platform"/>
                <field name="store_url"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Platform" name="group_platform" context="{'group_by': 'platform'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ecommerce_integration" model="ir.actions.act_window">
        <field name="name">E-commerce Integration</field>
        <field name="res_model">ecommerce.integration</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first E-commerce Integration
            </p>
            <p>
                Configure your e-commerce platform integration to start syncing data.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ecommerce_integration_root"
              name="E-commerce Integration"
              sequence="10"
              web_icon="ecommerce_integration,static/description/icon.png"/>

    <!-- Action for Products (imported from product views) -->
    <record id="action_ecommerce_product" model="ir.actions.act_window">
        <field name="name">Sản phẩm sàn TMĐT</field>
        <field name="res_model">ecommerce.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có sản phẩm nào
            </p>
            <p>
                Import sản phẩm từ gian hàng của bạn trên các sàn TMĐT.
            </p>
        </field>
    </record>

    <menuitem id="menu_ecommerce_shop_management"
              name="Gian hàng"
              parent="menu_ecommerce_integration_root"
              action="action_shop_management_dashboard"
              sequence="5"/>

    <menuitem id="menu_ecommerce_products"
              name="Sản phẩm sàn"
              parent="menu_ecommerce_integration_root"
              action="action_ecommerce_product"
              sequence="6"/>

    <menuitem id="menu_ecommerce_orders"
              name="Đơn hàng sàn"
              parent="menu_ecommerce_integration_root"
              action="action_ecommerce_order"
              sequence="7"/>

    <menuitem id="menu_ecommerce_integration"
              name="Integrations"
              parent="menu_ecommerce_integration_root"
              action="action_ecommerce_integration"
              sequence="10"/>

    <menuitem id="menu_ecommerce_configuration"
              name="Configuration"
              parent="menu_ecommerce_integration_root"
              sequence="100"/>

</odoo>
